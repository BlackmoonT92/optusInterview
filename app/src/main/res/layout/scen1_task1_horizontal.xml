<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/horizontal_task1"
    tools:context=".screen.scenario1.Scenario1Activity"
    >
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="horizontal"
      >

    <TextView
        android:layout_width="@dimen/scen1_horizontal_item_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Item 1"
        android:layout_margin="@dimen/material_margin_medium"
        style="@style/AppTheme.TextView"
        android:onClick="onItemTask1Clicked"
        />

    <TextView
        android:layout_width="@dimen/scen1_horizontal_item_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Item 2"
        android:layout_margin="@dimen/material_margin_medium"
        style="@style/AppTheme.TextView"
        android:onClick="onItemTask1Clicked"
        />


    <TextView
        android:layout_width="@dimen/scen1_horizontal_item_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Item 3"
        android:layout_margin="@dimen/material_margin_medium"
        style="@style/AppTheme.TextView"
        android:onClick="onItemTask1Clicked"
        />


    <TextView
        android:layout_width="@dimen/scen1_horizontal_item_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Item 4"
        android:layout_margin="@dimen/material_margin_medium"
        style="@style/AppTheme.TextView"
        android:onClick="onItemTask1Clicked"
        />


    <TextView
        android:layout_width="@dimen/scen1_horizontal_item_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Item 5"
        android:layout_margin="@dimen/material_margin_medium"
        style="@style/AppTheme.TextView"
        android:onClick="onItemTask1Clicked"
        />

  </LinearLayout>
</HorizontalScrollView>
